<html class='no-js' ng-app='sender'>
  <head>
    <meta charset='utf-8'>
    <meta content='IE=edge,chrome=1' http-equiv='X-UA-Compatible'>
    <meta content='initial-scale=1.0' name='viewport'>
    <meta content='A Static Site Generator' name='description'>
    <meta content='' name='keywords'>
    <title>Middleman</title>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css">

    <!-- Optional theme -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap-theme.min.css">

    <!-- Latest compiled and minified JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
    <link href="../assets/css/all.css" media="screen" rel="stylesheet" type="text/css" />
    <script src="../assets/js/vendor/modernizr.js" type="text/javascript"></script>
    <script src="../assets/js/vendor/angular.js" type="text/javascript"></script>
    <script src="../assets/js/vendor/angular-resource.js" type="text/javascript"></script>
    <script src="../assets/js/app.js" type="text/javascript"></script>
  </head>
  <body>
    <!--[if lt IE 8]>
      <p class="compatibility-notice">
